<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/red_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="83dp"
                android:minHeight="48dp"
                android:text="@string/red"
                android:thumbTint="@android:color/holo_red_dark" />

            <SeekBar
                android:id="@+id/seekBar_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/editText_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:ems="2"
                android:inputType="number"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/green_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/green"
                android:thumbTint="@android:color/holo_green_dark" />

            <SeekBar
                android:id="@+id/seekBar_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/editText_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:ems="2"
                android:inputType="text"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/blue_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="84dp"
                android:minHeight="48dp"
                android:text="@string/blue"
                android:thumbTint="@android:color/holo_blue_dark" />

            <SeekBar
                android:id="@+id/seekBar_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/editText_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:ems="2"
                android:inputType="text"
                android:text="0"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="75dp"
            android:layout_weight="1"
            android:text="@string/reset" />
    </LinearLayout>

</LinearLayout>